<p id="notice"><%= notice %></p>

<h1>Chirps</h1>

<ul>
  <% @chirps.each do |chirp| %>
    <li><%= chirp.id %> -- <%= chirp.text.upcase %> -- <%= chirp.upvote %> upvotes | <%= link_to 'Upvote', vote_chirp_path(chirp.id, {type: "up"}), method: :put %> |  <%= link_to 'Downvote', vote_chirp_path(chirp.id, {type: "down"}), method: :put %> | <%= link_to 'Destroy', chirp, method: :delete %></li>
  <% end %>
</ul>

<%= link_to 'New Chirp', new_chirp_path %>


